<!-- NAVBAR -->
<partial name="Partial/_Navbar" />


<div class="mx-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4 position-relative">
                <div class="b-left"></div>
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="fw-bold text-uppercase" style="font-size: .7em;">
                            Newborn Name:
                        </div>
