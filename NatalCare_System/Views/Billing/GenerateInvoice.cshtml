@{
    ViewData["Title"] = "Generate Invoice";
    Layout = "_UserLayout";
}
<style>
    .form-check-input:checked {
        background-color: #FF8EA6;
        border-color: #FF8EA6;
    }

    .discounted:hover {
        cursor: pointer;
    }
</style>
<!-- NAVBAR -->
<partial name="Partial/_Navbar" />

<div class="mx-5">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center bg-pink">
            <h5 class="card-title my-2">NEW INVOICE</h5>
        </div>
        <div class="card-body m-4">
            <form controller="Newborn" action="Create">
                <div class="row form-group">
                    <div validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-md-4 mb-3">
                        <label for="FirstName" class="control-label">Patient Name</label>
                        <input for="FirstName" class="form-control" placeholder="Enter Patient Name" required />
                        <span validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4 mb-3">
                        <label for="MiddleName" class="control-label">Staff Name</label>
                        <select for="MiddleName" class="form-control" placeholder="Enter Staff Name" asp-items="ViewBag">
                        </select>
                        <span validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4 mb-3">
                        <label for="LastName" class="control-label">Bill Date</label>
                        <input for="LastName" class="form-control" type="date" required />
                        <span validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4 mb-3">
                        <label for="Birthdate" class="control-label">Due Date</label>
                        <input for="Birthdate" class="form-control" type="date" required />
                        <span validation-for="Birthdate" class="text-danger"></span>
                    </div>



                    <div class="form-group col-12 ">
                        <div class="d-flex align-items-center justify-content-end gap-3">
                            <button class="btn btn-pink addRow">
                                <i class="fas fa-plus"></i>
                                <span>Add Row</span>
                            </button>
                            <button class="btn btn-pink addItem" data-bs-toggle="modal" data-bs-target="#addItemModal">
                                <i class="fas fa-plus"></i>
                                <span>Add Item</span>
                            </button>
                            <button class="btn btn-pink addItem" data-bs-toggle="modal" data-bs-target="#addServicesModal">
                                <i class="fas fa-plus"></i>
                                <span>Add Services</span>
                            </button>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="row d-flex scrollableTable" style="height:20vh; overflow:auto; scrollbar-width:thin;" id="scrollableTable">
                    <div class="h-100 w-100">
                        <table class="table text-center">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Item/Services</th>
                                    <th>Description</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Amount</th>
                                    <th>Philhealth Covered</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="createInvoiceTBody" id="tableBody">
                                <tr>
                                    <td>1</td>
                                    <td style="display:flex; flex-direction:row; justify-content:space-evenly; align-items:center;">
                                        <button class="btn btn-outline-pink " style="margin-right:3rem;">ITEM</button>
                                        <button class="btn btn-outline-pink ">
                                            <span>SERVICES</span>
                                        </button>
                                    </td>
                                    <td>     
                                        <button class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#descriptionModal" >VIEW</button>
                                    </td>
                                    <td>
                                        <input list="numberList" class="w-100 text-center form-control" type="number" />
                                        <datalist id="numberList">
                                          <option value="1"/>
                                          <option value="2"/>
                                          <option value="3"/>
                                          <option value="4"/>
                                          <option value="5"/>
                                        </datalist>
                                    </td>
                                    <td>₱<span>0</span></td>
                                    <td>₱<span>0</span></td>
                                    <td>
                                        <input class="w-100 text-center form-control" type="number" />

                                    </td>
                                    <td style="">
                                        <i class="fas fa-trash "></i>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
                <hr />

                <div class="row form-group">

                    <div class="form-group col-md-5 mb-3">
                        <label for="FirstName" class="control-label fw-bold">Notes:</label>
                        <textarea for="FirstName" class="form-control" rows="4" cols="50"></textarea>
                        <span validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-7 row">
                        <div class="form-group col-5  d-flex flex-column align-items-end">
                            <label for="MiddleName" class="control-label my-2 fw-bold">Subtotal:</label>
                            <label for="MiddleName" class="control-label my-2 fw-bold">Philhealth Total:</label>
                            <label for="MiddleName" class="control-label my-2 fw-bold">Is Discounted:</label>
                            <label for="MiddleName" class="control-label my-2 fw-bold">Dicount:</label>


                        </div>
                        <div class="form-group col-7 mb-3  d-flex flex-column align-items-start">

                            <p class=" mt-1 fw-bold">₱0.00</p>
                            <p class=" mt-1 fw-bold">₱0.00</p>

                            <input class="form-check-input discounted mb-3 fw-bold" type="checkbox" id="isDiscounted" style="width: 25px;">

                            <input for="MiddleName" class="form-control mb-3 fw-bold" type="text" id="discount" disabled/>

                            <p class="align-self-center fw-bold">Total Amount: ₱0.00</p>

                        </div>
                    </div>

                    <div class="form-group row-md-12 d-flex justify-content-end align-items-center">


                        <button class="btn btn-success mx-2">
                            <i class="fas fa-plus"></i>
                            <span>Make Payment</span>
                        </button>

                        <button class="btn btn-primary mx-2">
                            <i class="fas fa-check"></i>
                            <span>Save & Pay Later</span>
                        </button>

                        <a class="btn btn-dark mx-2" asp-action="InvoiceList" asp-controller="Billing">
                            <i class="fas fa-close"></i>
                            <span>Cancel</span>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



                                @* ADD ITEM *@
<div class="modal fade" aria-labelledby="staticBackdropLabel" id="addItemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered" role="document" style="height:50vh;">

        <div class="modal-content" style="height: 440px; color: #425833;  font-family: 'Montserrat', sans-serif; border-radius:.9rem;">

            <div class="modal-header bg-pink" style="height:60px; display:flex; border-radius:.5rem .5rem 0 0 ;">

                <div class="modal-headerDiv1 " style="width:100%; display:flex;justify-content:center;align-items:center;">
                    <h4 style="color:white;">ADD ITEM</h4>
                </div>


            </div>

            <div class="modal-body addItemModalBody">
                <div class="addItemModalBodyDiv1">
                    <label>Item Name : </label>
                    <input type="text" class="form-control " autocomplete="off" id="addItemName" />

                </div>

                <div class="addItemModalBodyDiv1">
                    <label>Description : </label>
                    <textarea class="form-control form-text " id="addItemDescription" placeholder="Optional..."></textarea>

                </div>

                <div class="addItemModalBodyDiv1">
                    <label>Price : ₱</label>
                    <input type="number" class="form-control " id="addItemPrice" />

                </div>

                <button type="submit" id="addItemSubmitBtn" class="btn btn-success " style="margin-top:1rem" disabled data-bs-dismiss="modal"><i class="fa fa-plus" aria-hidden="true"></i> ADD</button>

            </div>
        </div>
    </div>
</div>


