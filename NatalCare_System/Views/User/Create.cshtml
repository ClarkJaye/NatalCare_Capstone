@using NatalCare.Models.DTOs
@model UserDTO

@{
    ViewData["Title"] = "Add User";

    Layout = "_UserLayout";
}

<partial name="Partial/_Navbar" />

<div class="mx-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title my-2">Add User</h5>
        </div>
        <div class="card-body m-4">
            <form asp-controller="User" asp-action="Create" method="POST">
                <div class="row form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="FirstName" class="control-label">First Name</label>
                        <div class="input-group">
                            <label asp-for="FirstName" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-user"></i>
                            </label>
                            <input asp-for="FirstName" class="form-control form-control-lg fs-6" placeholder="Enter Firstname" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="MiddleName" class="control-label">Middle Name</label>
                        <div class="input-group">
                            <label asp-for="MiddleName" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-user"></i>
                            </label>
                            <input asp-for="MiddleName" class="form-control form-control-lg fs-6" placeholder="Enter Middlename" />
                        </div>
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <div class="input-group">
                            <label asp-for="LastName" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-user"></i> 
                            </label>
                            <input asp-for="LastName" class="form-control form-control-lg fs-6" placeholder="Enter Lastname" />
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <div class="input-group">
                            <label asp-for="Email" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-envelope"></i>
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg fs-6" placeholder="Enter Email" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Gender" class="control-label"></label>
                        <div class="input-group">
                            <label asp-for="Gender" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-venus-mars"></i>
                            </label>
                            <select asp-for="Gender" class="form-select text-muted">
                                <option disabled selected class="text-muted">-select gender</option>
                                <option>Female</option>
                                <option>Male</option>

                            </select>
                        </div>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Address" class="control-label"></label>
                        <div class="input-group">
                            <label asp-for="Address" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-map-marker-alt"></i>
                            </label>
                            <input asp-for="Address" class="form-control form-control-lg fs-6" placeholder="Enter Address" />
                        </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Birthdate" class="control-label"></label>
                        <div class="input-group">
                            <label asp-for="Birthdate" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-calendar-alt"></i>
                            </label>
                            <input asp-for="Birthdate" class="form-control form-control-lg fs-6" placeholder="Enter Birthdate" />
                        </div>
                        <span asp-validation-for="Birthdate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3" hidden>
                        <label asp-for="Password" class="control-label"></label>
                        <div class="input-group">
                            <label asp-for="Password" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-lock"></i> 
                            </label>
                            <input asp-for="Password" class="form-control form-control-lg fs-6" value="123456" placeholder="Enter Password" required />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3" hidden>
                        <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                        <div class="input-group">
                            <label asp-for="ConfirmPassword" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-lock"></i> 
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg fs-6" value="123456" placeholder="Enter Confirm password"/>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Role" class="control-label">Profile</label>
                        <div class="input-group">
                            <label asp-for="Role" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-user-shield"></i>
                            </label>
                            <select asp-for="Role" asp-items="@Model.RoleList" class="form-select text-muted">
                                <option disabled selected class="text-muted">-select profile</option>
                            </select>
                        </div>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>


                    <div class="form-group col-12 mt-3 mb-3">
                        <div class="d-flex align-items-center justify-content-end gap-3">
                            <button class="btn btn-pink" type="submit">
                                <i class="fas fa-save"></i> <!-- Save icon for submit button -->
                                <span>Add New</span>
                            </button>
                            <a class="btn btn-outline-secondary" asp-controller="User" asp-action="Index">
                                <i class="fas fa-undo"></i> <!-- Undo icon for back button -->
                                <span>Back to List</span>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
