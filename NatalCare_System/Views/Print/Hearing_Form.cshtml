@model NatalCare.Models.Entities.NewbornHearing

@{
    ViewData["Title"] = "Print Hearing Form";
}
<style>
    label, input {
        font-size: 14px;
    }

</style>

<div class="m-3">
    <div class="text-center mb-4" style="cursor: pointer;">
        <img class="img-fluid" src="/img/logo.png" width="160" />
    </div>

    <h5 class="text-center ffw-bold mb-3">NEWBORN HEARING</h5>

    <div class="mt-4">
        <div class="row mb-3">
            <div class="col-sm-6 mb-3">
                <div class="d-flex align-items-center">
                    <h6 class="me-2 mb-0 fw-bold">Name of Newborn:</h6>
                    <div class="border-bottom flex-grow-1">
                        <input type="hidden" id="patID" name="PatientID" value="@Model.PatientID" />
                        <span class="px-2">
                            @Model.Newborn?.FirstName @Model.Newborn?.MiddleName  @Model.Newborn?.LastName
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 mb-3">
                <div class="d-flex align-items-center"> 
                    <h6 class="me-2 mb-0 fw-bold">Gender:</h6>
                    <div class="border-bottom flex-grow-1">
                        <span class="px-2">
                            @Model.Newborn?.Gender
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 mb-3">
                <div class="d-flex align-items-center">
                    <h6 class="me-2 mb-0 fw-bold">Date Delivered:</h6>
                    <div class="border-bottom flex-grow-1">
                        <span class="px-2">
                            @Model.Newborn?.DateofBirth
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 mb-3">
                <div class="d-flex align-items-center">
                    <h6 class="me-2 mb-0 fw-bold">Time Delivered:</h6>
                    <div class="border-bottom flex-grow-1">
                        <span class="px-2">
                            @Model.Newborn?.TimeofBirth
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-3 divider bg-pink" />

        <div class="row mb-3">
            <div class="col-sm-6 mb-3">
                <div class="d-flex align-items-center">
                    <h6 class="me-2 mb-0 fw-bold">Name of Mother:</h6>
                    <div class="border-bottom flex-grow-1">
                        <span class="px-2">
                            @Model.Patient?.FirstName @Model.Patient?.MiddleName  @Model.Patient?.LastName
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 mb-3">
                <div class="d-flex align-items-center">
                    <h6 class="me-2 mb-0 fw-bold">BirthDate:</h6>
                    <div class="border-bottom flex-grow-1">
                        <span class="px-2">
                            @Model.Patient?.Birthdate
                        </span>     
                    </div>
                </div>
            </div>

            <div class="col-sm-6 mb-3">
                <div class="d-flex align-items-center">
                    <h6 class="me-2 mb-0 fw-bold">Name of Father:</h6>
                    <div class="border-bottom flex-grow-1">
                        <span class="px-2">
                            @Model.Patient?.Spouse?.FirstName @Model.Patient?.Spouse?.MiddleName  @Model.Patient?.Spouse?.LastName
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 mb-3">
                <div class="d-flex align-items-center">
                    <h6 class="me-2 mb-0 fw-bold">BirthDate:</h6>
                    <div class="border-bottom flex-grow-1">
                        <span class="px-2">
                            @Model.Patient?.Spouse?.Birthdate
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-3 divider bg-pink" />

        <div class="row mb-3">
            <div class="col-sm-6 mb-3">
                <div class="d-flex align-items-center">
                    <h6 class="me-2 mb-0 fw-bold">Date Visit:</h6>
                    <div class="border-bottom flex-grow-1">
                        <span class="px-2">
                            @Model.DateVisit    
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 mb-3">
                <div class="d-flex align-items-center">
                    <h6 class="me-2 mb-0 fw-bold">Hearing Test Date:</h6>
                    <div class="border-bottom flex-grow-1">
                        <span class="px-2">
                            @Model.TestDate
                        </span>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-sm-12 mb-4">
            <label class="fw-bold">HEARING RESULTS:</label>
            <div class="border-bottom py-3">
                <span class="px-3">
                    @Model.HearingResults
                </span>
            </div>
        </div>
        <div class="col-sm-12 mb-4">    
            <label class="fw-bold">Notes:</label>
            <div class="border-bottom py-3">
                <span class="px-3">
                    @Model.Notes
                </span>
            </div>
        </div>

        <div class="row py-3 d-flex justify-content-center">
            <div class="col-md-6 mt-5 text-center">
                <div class="border-bottom px-3 mx-5"> @Model.AttendingPractitioner </div>
                <label class="fw-bold mt-2 d-block">Attending Practitioner</label>
            </div>
        </div>

    </div>  
</div>


<script>
    var patID = document.getElementById('patID').value;
    document.addEventListener('DOMContentLoaded', function () {
        PrintForm();
    });

    function PrintForm() {
        window.onafterprint = function () {
            window.location.href = "/Patient/MedicalRecords?id=" + patID;
        };

        window.print();
    }
</script>