@model NatalCare.Models.Entities.Staff

@{
    ViewData["Title"] = "Add Staff";
    Layout = "_UserLayout";
}

<partial name="Partial/_Navbar" />



<div class="mx-4">
    <div class="card card-selected w-75 mx-auto mt-5 shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title my-2">Add Staff</h5>
        </div>
        <div class="card-body m-4 pt-0">
            <form asp-controller="Staff" asp-action="Create">
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="FirstName" class="control-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="e.g, Maria" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="MiddleName" class="control-label">Middle Name</label>
                        <input asp-for="MiddleName" class="form-control" placeholder="e.g, asuncion" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="e.g, Cruz" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="RoleId" class="control-label">Staff Role</label>
                        <select asp-for="RoleId" class="form-select text-muted" required asp-items="ViewBag.roleStaff">
                            <option disabled selected>select role </option>
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>

 
                    <div class="form-group col-12 mt-3 mb-3">
                        <div class="d-flex align-items-center justify-content-end gap-3">
                            <button class="btn btn-pink" type="submit">
                                <i class="fas fa-save"></i>
                                <span>Save</span>
                            </button>
                            <a class="btn btn-outline-secondary" asp-controller="Staff" asp-action="Index">
                                <i class="fas fa-arrow-left me-1"></i>
                                <span>Back to List</span>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
