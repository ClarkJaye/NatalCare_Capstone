@model NatalCare.Models.Entities.Newborn


@{
    ViewData["Title"] = "Add Newborn";
    Layout = "_UserLayout";
}

<!-- NAVBAR -->
<partial name="Partial/_Navbar" />


<div class="mx-5">
    <div class="card card-selected w-75 mx-auto mt-5">
        <div class="card-header card-header-selected d-flex justify-content-between align-items-center">
            <h5 class="card-title my-2">Add Newborn</h5>
        </div>
        <div class="card-body m-4 pt-0">
            <form asp-controller="Newborn" asp-action="Create">
                <div class="row form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!--Mother Side-->
                    <h5 class="card-title mb-3"> Baby Information</h5>
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="FirstName" class="control-label">Baby Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter Firstname (e.g, juan)" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="MiddleName" class="control-label">Newborn Middle Name</label>
                        <input asp-for="MiddleName" class="form-control" placeholder="Enter Middlename (e.g, dela)" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="LastName" class="control-label">Newborn Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter Lastname (e.g, cruz)" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="DateofBirth" class="control-label"></label>
                        <input asp-for="DateofBirth" class="form-control" type="date" required />
                        <span asp-validation-for="DateofBirth" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="TimeofBirth" class="control-label"></label>
                        <input asp-for="TimeofBirth" class="form-control" type="time" required />
                        <span asp-validation-for="TimeofBirth" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-select" required>
                            <option disabled selected>select gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Circumference" class="control-label">Circumference</label>
                        <input asp-for="Circumference" class="form-control" placeholder="Enter circumference (cm)" required />
                        <span asp-validation-for="Circumference" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Head" class="control-label">Head</label>
                        <input asp-for="Head" class="form-control" placeholder="Enter head measurement (cm)" required />
                        <span asp-validation-for="Head" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Chest" class="control-label">Chest</label>
                        <input asp-for="Chest" class="form-control" placeholder="Enter chest measurement (cm)" required />
                        <span asp-validation-for="Chest" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Length" class="control-label">Length</label>
                        <input asp-for="Length" class="form-control" placeholder="Enter length (cm or in)" required />
                        <span asp-validation-for="Length" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Temp" class="control-label">Temperature</label>
                        <input asp-for="Temp" class="form-control" placeholder="Enter temperature (e.g, 37.5 °C)" required />
                        <span asp-validation-for="Temp" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Weight" class="control-label">Weight</label>
                        <input asp-for="Weight" class="form-control" placeholder="Enter weight (kg or lbs)" required />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="APGAR" class="control-label">APGAR</label>
                        <input asp-for="APGAR" class="form-control" placeholder="Enter APGAR score" required />
                        <span asp-validation-for="APGAR" class="text-danger"></span>
                    </div>


                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Medication" class="control-label">Medication</label>
                        <input asp-for="Medication" class="form-control" placeholder="Enter Medication" required />
                        <span asp-validation-for="Medication" class="text-danger"></span>
                    </div>



                    <!--Mother Side-->
                    <h5 class="card-title my-3 mb-3">Mother Information</h5>

                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="MotherID" class="control-label">Mother ID</label>
                        <input asp-for="MotherID" class="form-control text-uppercase" placeholder="(e.g, PT0001, PT0002 ...)" required />
                        <span asp-validation-for="MotherID" class="text-danger"></span>
                    </div>


                    <div class="form-group col-md-4 mb-3">
                        <label for="Patient.FirstName" class="control-label">Mother First Name</label>
                        <input id="Patient_FirstName" class="form-control" placeholder="Enter FirstName" readonly />
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label for="Patient.MiddleName" class="control-label">Mother First Name</label>
                        <input id="Patient_MiddleName" class="form-control" placeholder="Enter MiddleName" readonly />
                    </div>

                    <div class="form-group col-md-4 mb-3">
                        <label for="Patient.LastName" class="control-label">Mother Last Name</label>
                        <input id="Patient_LastName" class="form-control" placeholder="Enter Lastname" readonly />
                    </div>

                    <div class="form-group col-12 mt-3 mb-3">
                        <div class="d-flex align-items-center justify-content-end gap-3">
                            <button class="btn btn-pink" type="submit">
                                <i class="fas fa-save"></i>
                                <span>Save</span>
                            </button>
                            <a class="btn btn-outline-secondary" asp-controller="Newborn" asp-action="Index">
                                <i class="fas fa-undo"></i>
                                <span>Back to List</span>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/toastr/toastr.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let typingTimer; 
            const typingDelay = 1000; 

            $("#MotherID").on("keyup", function () {
                clearTimeout(typingTimer); 

                let motherID = $(this).val().toUpperCase();

                if (motherID) {
                    typingTimer = setTimeout(function () {
                        $.ajax({
                            url: '@Url.Action("GetMotherDetails", "Patient")',
                            type: 'GET',
                            data: { motherID: motherID },
                            success: function (data) {
                                console.log(data)
                                if (data && data.isSuccess) {
                                    $("#Patient_FirstName").val(data.firstName);
                                    $("#Patient_MiddleName").val(data.middleName);
                                    $("#Patient_LastName").val(data.lastName);
                                    toastr.success('Mother Found!');
                                } else {
                                    $("#Patient_FirstName").val(data.message);
                                    $("#Patient_MiddleName").val(data.message);
                                    $("#Patient_LastName").val(data.message);
                                    toastr.error('Mother Not Found!');
                                }
                            },
                            error: function () {
                                console.error("Error retrieving mother details.");
                            }
                        });
                    }, typingDelay);
                } else {
                    $("#Patient_FirstName").val(data.message);
                    $("#Patient_MiddleName").val(data.message);
                    $("#Patient_LastName").val(data.message);
                }
            });
        });
    </script>

}
