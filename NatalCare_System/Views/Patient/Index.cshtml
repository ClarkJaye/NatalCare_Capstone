@model List<NatalCare.Models.Entities.Patients>

@{
    ViewData["Title"] = "Patients Records";
    Layout = "_UserLayout";
}
<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5; 
    }

    .table th, .table td {
        border-top: none !important;
        padding: 16px;
        vertical-align: middle; 
    }

    .card {
        border-radius: 12px!important; 
        background: var(--light)!important;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-weight: 500;
        border-bottom: 2px solid #e0e0e0;
        background: var(--light) !important;
        border-top-left-radius: 12px !important;
        border-top-right-radius: 12px !important;
    }
</style>


<!-- NAVBAR -->
<partial name="Partial/_Navbar" />

<div class="mx-4">
    <div class="row">
        <!-- Totals Section -->
        <div class="col-md-4 mb-4">
            <div class="card shadow py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="fw-bold mb-1" style="font-size: 1em; color: var(--dark);">
                                Today Patients
                            </div>
                            <div class="h4 fw-bold my-3">
                                10
                            </div>
                            <div class="fw-bold mb-1" style="font-size: .8em; color: var(--dark);">
                                Total Patients 10 today
                            </div>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-info">
                                <i class="fas fa-clock text-white" style="font-size: 20px;"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="fw-bold mb-1" style="font-size: 1em; color: var(--dark);">
                                Monthly Patients
                            </div>
                            <div class="h4 fw-bold my-3">
                                150
                            </div>
                            <div class="fw-bold mb-1" style="font-size: .8em; color: var(--dark);">
                                Total Patients 10 this month
                            </div>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-warning">
                                <i class="fas fa-calendar" style="font-size: 20px;"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="fw-bold mb-1" style="font-size: 1em; color: var(--dark);">
                                Yearly Patients
                            </div>
                            <div class="h4 fw-bold my-3">
                                251
                            </div>
                            <div class="fw-bold mb-1" style="font-size: .8em; color: var(--dark);">
                                Total Patients 10 this year
                            </div>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-success">
                                <i class="fas fa-calendar"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <div class="mb-4 mt-2 d-flex align-items-center justify-content-start">
        <a class="btn btn-pink d-flex align-items-center gap-2" asp-controller="Patient" asp-action="Create">
            <i class='fas fa-user-plus' style="font-size: 18px;"></i>
            <strong>Add New Users</strong>
        </a>
    </div>

    <div class="card shadow-sm">
       @*  <div class="card-header d-flex justify-content-between align-items-center bg-white">
            <h5 class="card-title m-0">Patients</h5>
            <div>
                <a class="btn btn-sm btn-secondary d-flex align-items-center gap-2" asp-controller="Patient" asp-action="Inactive">
                    <i class='bx bxs-trash'></i>
                    <span>Show Temporary Deleted</span>
                </a>
            </div>
        </div> *@
        <div class="card-body">
          @*   <div class="mb-4 mt-2 d-flex align-items-center justify-content-start" style="padding: 0 12px;">
                <a class="btn btn-sm btn-pink d-flex align-items-center gap-2" asp-controller="Patient" asp-action="Create">
                    <i class='fas fa-user-plus' style="font-size: 18px;"></i>
                    <strong>Add New Users</strong>
                </a>
            </div> *@

            <div class="table-responsive">
                <table id="patientsTable" class="table table-hover table-striped">
                    <thead class="border-bottom-2">
                        <tr>
                            <th>Case No</th>
                            <th>Lastname</th>
                            <th>Firstname</th>
                            <th>Middlename</th>
                            <th>Age</th>
                            <th>Address</th>
                            <th>Date of Birth</th>
                            <th>Date Added</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                        {
                            <tr class="align-middle">
                                <td>@patient.PatientID</td>
                                <td>@patient.LastName</td>
                                <td>@patient.FirstName</td>
                                <td>@patient.MiddleName</td>
                                <td>
                                    @{
                                        if (patient.Birthdate.HasValue)
                                        {
                                            var birthYear = patient.Birthdate.Value.Year;
                                            var currentYear = DateTime.Now.Year;
                                            var age = currentYear - birthYear;
                                            <text>@age</text>
                                        }
                                        else
                                        {
                                            @:N/A
                                        }
                                    }
                                </td>
                                <td>@patient.Address</td>
                                <td>@patient.Birthdate?.ToString("MM/dd/yyyy")</td>
                                <td>@patient.Created_At?.ToString("MM/dd/yyyy")</td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center justify-content-center gap-4">
                                        <a class="text-dark" asp-controller="Patient" asp-action="Information" asp-route-id="@patient.PatientID">
                                            <i class="fa-solid fa-list" style="font-size: 24px;"></i>
                                        </a>

                                        <a class="text-success" asp-controller="Patient" asp-action="Edit" asp-route-id="@patient.PatientID">
                                            <i class="fa-solid fa-pen-to-square" style="font-size: 24px;"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Initialize DataTables
        $('#patientsTable').DataTable({
            paging: true,
            lengthChange: true,
            searching: true,
            ordering: true,
            lengthMenu: [10, 20, 50, 100],
            language: {
                search: "_INPUT_",
                searchPlaceholder: "Search patients..."
            },
            language: {
                paginate: {
                    previous: "Previous",
                    next: "Next"
                }
            },
            info: true,
            autoWidth: false,
            responsive: true,
            columnDefs: [
                { orderable: false, targets: -1 }
            ]
        });


    });

</script>




