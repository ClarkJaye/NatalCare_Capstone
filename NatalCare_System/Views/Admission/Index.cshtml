@{
    ViewData["Title"] = "Admission Records";
    ViewData["NavTitle"] = "Admission Records";
    Layout = "_UserLayout";
}

<!-- NAVBAR -->
<partial name="Partial/_Navbar" />

<div class="mx-4">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow py-2 card-selected">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="fw-bold mb-1" style="font-size: 1em; color: var(--dark);">
                                Total Admitted
                            </div>
                            <div class="h4 fw-bold my-3">
                                @(ViewBag.TodayRecord ?? 0)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow py-2 card-selected">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="fw-bold mb-1" style="font-size: 1em; color: var(--dark);">
                                Total In-Labor
                            </div>
                            <div class="h4 fw-bold my-3">
                                @(ViewBag.MonthlyRecord ?? 0)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow py-2 card-selected">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="fw-bold mb-1" style="font-size: 1em; color: var(--dark);">
                                Total Pospartum Care
                            </div>
                            <div class="h4 fw-bold my-3">
                                @(ViewBag.MonthlyRecord ?? 0)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4 mt-2 d-flex align-items-center justify-content-end gap-3">
        <a class="btn btn-pink d-flex align-items-center gap-2" asp-controller="Admission" asp-action="Create">
            <i class="fas fa-plus" style="font-size: 18px;"></i>
            <strong>Add Admit Patient</strong>
        </a>
    </div>


    <div class="card shadow-sm card-selected">
        <div class="card-body">
            <div class="table-responsive">
                <table id="newbornTable" class="table table-hover table-striped table-datatable">
                    <thead class="border-bottom-2">
                        <tr>
                            <th>Patient No#</th>
                            <th>Patient Name</th>
                            <th>Date & Time Admitted</th>
                            <th>Date & Time Discharge</th>
                            <th>Ward No#</th>
                            <th>Patient Status</th>
                            <th>Notes</th>
                            <th>Added By</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="cursor: pointer;">
                            <th>PT001</th>
                            <td>Suarez Suarez Pepito</td>
                            <td>Nov 22, 2024 3 PM</td>
                            <td>Nov 23, 2024 3 PM</td>
                            <td>WARD 2</td>
                            <td>
                                <span class="badge bg-success">In Labor</span>
                            </td>
                            <td>Sample  Sample</td>
                            <td>Pdeuciano</td>
                            <td>
                                <div class="d-flex align-items-center justify-content-center gap-2">
                                    <a class="btn btn-outline-secondary" asp-controller="" asp-action="" asp-route-id="">
                                        <i class="fa-solid fa-list"></i>
                                        @* <span>Details</span> *@
                                    </a>
                                    <a class="btn btn-outline-primary" asp-controller="" asp-action="" asp-route-id="">
                                        <i class="fa-solid fa-pencil"></i>
                                        @* <span>Details</span> *@
                                    </a>
                                    <button class="btn btn-outline-danger dlt-Btn">
                                        <i class="fa-solid fa-trash"></i>
                                        @* <span>Delete</span> *@
                                    </button>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>




<script>

    document.addEventListener("DOMContentLoaded", function () {

    });

</script>




