    //Bar Chart
    function LoadBarChart() {
        const ctx = document.getElementById("barGraph").getContext("2d");
        BarChart = new Chart(ctx, {
            type: "bar",
            data: {
                labels: [], // Months
                datasets: [
                    {
                        label: "Prenatal",
                        data: [],
                        backgroundColor: "#36a2eb"
                    },
