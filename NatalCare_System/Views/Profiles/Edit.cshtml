@model NatalCare.Models.Entities.Role

@{
    ViewData["Title"] = "Edit Profile";

    Layout = "_UserLayout";
}

<partial name="Partial/_Navbar" />

<div class="mx-4">
    <div class="mb-3">
        <a class="btn btn-sm btn-outline-secondary" asp-controller="Profiles" asp-action="Index">
            <span class="fas fa-undo"></span> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title my-2">Edit Profile</h5>
        </div>
        <div class="card-body m-5">
            <form asp-controller="Profiles" asp-action="Edit" method="POST">
                <div class="row form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" /> <!-- Ensure you pass the profile Id -->

                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="control-label">Profile Name</label>
                        <div class="input-group">
                            <label asp-for="Name" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-user"></i>
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg fs-6" placeholder="Enter Name" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <div class="input-group">
                            <label asp-for="Description" class="input-group-text" style="cursor:pointer">
                                <i class="fas fa-user"></i>
                            </label>
                            <input asp-for="Description" class="form-control form-control-lg fs-6" placeholder="Enter Description" />
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group col-12 mt-3 mb-3">
                        <div class="d-flex align-items-center justify-content-end gap-3">
                            <button class="btn btn-pink" type="submit">
                                <i class="fas fa-save"></i>
                                <span>Update</span>
                            </button>
                            <a class="btn btn-outline-secondary" asp-controller="Profiles" asp-action="Index">
                                <i class="fas fa-undo"></i>
                                <span>Back to List</span>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
